<table>
  <tr>
    <th>Task</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.title, task %></td>
    <td><%= button_to 'Completed!' task, method: :delete, data: {confirm: 'Are you sure?'} %></td> 
  </tr>
<% end %>
</table>

